<!doctype html>
<html lang="en">

<head>
	<title></title>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Bootstrap CSS -->
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
	<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
</head>

<body>
	<div class=" container container-fluid">
		<div class="row">
			<div class="row">
				<!-- <form method="GET" action="/quiz/<%=testId %>/<%=questionSet %>/<%=question.id %>"> -->
				<div class="row">
					<input type="hidden" name="questionId" value="<%=question.id%>">

					<h3><span class="label label-warning" id="qid">
							<%=question.id%></span>
						<%=question.content%>
					</h3>
				</div>
				<hr>
				<% if (question.num_ans > 1) { %>
				<% for(let i=0; i< answers.length; i++) {%>
				<div class="form-check">
					<input class="form-check-input" type="checkbox" value="<%=answers[i].id%>" name="ans">
					<label class="form-check-label" for="defaultCheck1">
						<%= answers[i].content%>
					</label>
				</div>
				<% } %>
				<% } else { %>
				<% for(let i=0; i< answers.length; i++) {%>
				<div class="form-check">
					<input class="form-check-input" type="radio" value="<%=answers[i].id%>" name="ans">
					<label class="form-check-label" for="defaultCheck1">
						<%= answers[i].content%>
					</label>
				</div>
				<% } %>
				<% } %>
				<hr>
				<button onclick="location.href='/quiz/<%=testId %>/<%=questionSet %>/<%=index %>'" type="button" class="btn btn-primary">Next</button>
				<!-- <button type="submit" class="btn btn-primary">Next</button> -->
				<!-- </form> -->
			</div>
		</div>
	</div>
</body>

</html>